{
	"Version": "2012-10-17",
	"Statement": [
		{
			"Sid": "BucketManagement",
			"Effect": "Allow",
			"Action": [
				"s3:CreateBucket",
				"s3:ListAllMyBuckets"
			],
			"Resource": "*"
		},
		{
			"Sid": "BucketLevelActions",
			"Effect": "Allow",
			"Action": [
				"s3:GetBucketLocation",
				"s3:ListBucket",
				"s3:PutBucketPolicy",
				"s3:GetBucketPolicy",
				"s3:PutLifecycleConfiguration",
				"s3:GetLifecycleConfiguration",
				"s3:GetEncryptionConfiguration",
				"s3:PutEncryptionConfiguration",
				"s3:GetBucketVersioning",
				"s3:PutBucketVersioning"
			],
			"Resource": "arn:aws:s3:::rclone-glacier-backup"
		},
		{
			"Sid": "ObjectLevelActions",
			"Effect": "Allow",
			"Action": [
				"s3:GetObject",
				"s3:PutObject",
				"s3:RestoreObject",
				"s3:DeleteObject"
			],
			"Resource": "arn:aws:s3:::rclone-glacier-backup/*"
		}
	]
}