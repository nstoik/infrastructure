---
global:
  resolve_timeout: 5m

route:
  group_by: ['alertname', 'instance']
  group_wait: 30s
  group_interval: 5m
  repeat_interval: 12h

  # Default receiver
  receiver: 'ntfy-alerts'

  routes:
    - receiver: 'ntfy-alerts'

receivers:
  - name: 'ntfy-alerts'
    webhook_configs:
      - url: 'http://ntfy-alertmanager:8080'
        send_resolved: true
        http_config:
          basic_auth:
            username: '{{ ntfy_user }}'
            password: '{{ secret_ntfy_password }}'

inhibit_rules:
  - source_match:
      severity: 'critical'
    target_match:
      severity: 'warning'
    equal: ['alertname', 'instance']
